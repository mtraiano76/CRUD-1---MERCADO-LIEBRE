<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<!-- Show the "visited" products -->
			<% visitedProducts.forEach(product => {%> <!--creo la logica para que busque por cada producto visited-->
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%=product.id %>"> <!--busca el producto por el id <%=product.id %>">-->
							<figure class="product-box_image">
								<img src="/images/products/<%=product.image %>" alt="imagen de producto"><!--busca la imagen <%=product.id %>">-->
							</figure>
							<article class="product-box_data">
								<h2>$<%=product.price%></h2> <!-- logica para mostrar los datos de precio de manera dinamica-->
								<% if (product.discount) {%> <!-- if para mostrar si tiene descuento, si es 0 no lo muestra. 0 es = a false-->
								<span><%=product.discount%>%</span><!-- logica para mostrar los datos del descuento de manera dinamica-->
								<%}%>
								<p><%=product.name%></p><!-- logica para mostrar los datos del nombre de manera dinamica-->
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<%})%>

		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<!-- Show the "in-sale" products -->
			<% inSaleProducts.forEach(product => {%> <!--creo la logica para que busque por cada producto In Sale-->
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%=product.id %>"> 
							<figure class="product-box_image">
								<img src="/images/products/<%=product.image %>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2>$<%=product.price%></h2> <!-- logica para mostrar los datos de precio de manera dinamica-->
								<% if (product.discount) {%> <!-- if para mostrar si tiene descuento, si es 0 no lo muestra. 0 es = a false-->
								<span><%=product.discount%>%</span><!-- logica para mostrar los datos del descuento de manera dinamica-->
								<%}%>
								<p><%=product.name%></p><!-- logica para mostrar los datos del nombre de manera dinamica-->
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<%})%>
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>